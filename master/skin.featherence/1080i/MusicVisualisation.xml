<?xml version="1.0" encoding="UTF-8"?>
<window id="2006" type="dialog">
  <defaultcontrol always="true">10</defaultcontrol>
  <onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>
  <controls>
    <control type="image" description="">
	  <include>Fade40</include>
	  <height>1080</height>
	  <texture>special://skin/resources/fanart.jpg</texture>
	  <width>1920</width>
	  <visible>String.IsEmpty(Window(Visualisation).Property(ArtistSlideshow))</visible>
	</control>
	
	<control type="button" id="10">
	  <onup condition="Player.HasAudio">ActivateWindow(12901)</onup>
	  <onclick>ReplaceWindow(Home.xml)</onclick>
	  <visible>false</visible>
	</control>
	<control type="visualisation">
		<height>1080</height>
		<width>1920</width>
		<visible>Player.HasAudio</visible>
	</control>
	
	<control type="multiimage">
		<posx>0</posx>
		<posy>50</posy>
		<width>1280</width>
		<height>720</height>
		<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
		<aspectratio>keep</aspectratio>
		<timeperimage>10000</timeperimage>
		<fadetime>2000</fadetime>
		<randomize>true</randomize>
		<visible>!String.IsEmpty(Window(Visualisation).Property(ArtistSlideshow))</visible>
	</control>
	<include>TopVideoInformation</include>
	<include>TopInformation</include>
	<include>TouchSupport</include>
  </controls>
</window>
