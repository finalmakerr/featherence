<?xml version="1.0" encoding="UTF-8"?>
<window id="1000" description="">
  <!--<defaultcontrol always="true"></defaultcontrol>-->
  <onload condition="!System.HasAlarm(timeout)">AlarmClock(timeout,Action(Back),00:10,silent)</onload>
  <onunload>CancelAlarm(timeout,true)</onunload>
  <onunload condition="!String.IsEmpty(Window(home).Property(1000progress))">ClearProperty(1000progress,home)</onunload>
  <onunload condition="!String.IsEmpty(Window(home).Property(1000title))">ClearProperty(1000title,home)</onunload>
  <onunload condition="!String.IsEmpty(Window(home).Property(1000comment))">ClearProperty(1000comment,home)</onunload>
  <controls>
    <include>BlackBackground</include>
    <control type="label" description="אנא המתן">
	  <include>LabelC11</include>
	  <!--<posx>960</posx>
	  <posy>540</posy>-->
	  <height>1080</height>
	  <width>1920</width>
	  <label>$LOCALIZE[20186]</label>
	</control>
	<control type="label" description="כותרת + התקדמות">
	  <textcolor>yellow</textcolor>
	  <include>LabelC10</include>
	  <!--<posx>960</posx>-->
	  <posy>60</posy>
	  <height>1080</height>
	  <width>1920</width>
	  <label>$INFO[Window(home).Property(1000title)]   $INFO[Window(home).Property(1000progress)]</label>
	  <visible>!String.IsEmpty(Window(home).Property(1000title)) | Integer.IsGreater(Window(home).Property(1000progress),0)</visible>
	</control>
	<control type="label" description="הערות">
	  <include>LabelC5</include>
	  <!--<posx>960</posx>-->
	  <posy>120</posy>
	  <height>1080</height>
	  <width>1920</width>
	  <label>$INFO[Window(home).Property(1000comment)]</label>
	  <visible>!String.IsEmpty(Window(home).Property(1000comment))</visible>
	</control>
	<include>WindowsBusy</include>
  </controls>
</window>