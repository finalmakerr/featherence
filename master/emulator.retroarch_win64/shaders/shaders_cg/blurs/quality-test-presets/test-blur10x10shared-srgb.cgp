shaders = "3"

# Pass0: Linearize RGB:
shader0 = ../../srgb-helpers/first-pass-linearize.cg
filter_linear0 = "true"
scale_type0 = "source"
scale0 = "1.0"
srgb_framebuffer0 = "true"

# Pass1: Blur 10x10
shader1 = ../blur10x10shared.cg
filter_linear1 = "true"
scale_type1 = "source"
scale1 = "1.0"
srgb_framebuffer1 = "true"

# Pass2: Scale to the screen size and gamma-correct the output:
shader2 = ../../srgb-helpers/last-pass-gamma-correct.cg
filter_linear2 = "true"
scale_type2 = "source"
